{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020", // Escolha a versão correta (remover a duplicação de "target")
    "module": "ESNext", // Para compatibilidade com módulos modernos
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", 
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler", // Se você estiver usando um bundler, mantenha "Bundler"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // Se você não quer gerar arquivos de saída, deixe isso como true
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}

